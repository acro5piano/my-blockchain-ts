{
  "name": "my-blockchain-js",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:acro5piano/my-blockchain-js",
  "author": "gosho-kazuya <ketsume0211@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "micro",
    "build": "tsc",
    "dev": "tsc && npm-run-all --parallel watch:ts watch:js",
    "watch:ts": "tsc -w",
    "watch:js": "micro-dev",
    "test": "jest src",
    "lint": "tslint"
  },
  "dependencies": {
    "micro": "^9.3.3",
    "microrouter": "^3.1.3",
    "node-fetch": "^2.2.0",
    "node-forge": "^0.10.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.116",
    "@types/micro": "^7.3.1",
    "@types/microrouter": "^3.1.0",
    "@types/node": "^10.5.8",
    "@types/node-fetch": "^2.1.2",
    "@types/node-forge": "^0.7.4",
    "@types/uuid": "^3.4.3",
    "jest": "^23.5.0",
    "micro-dev": "^3.0.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^7.1.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^3.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
